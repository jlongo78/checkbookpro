<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th>Starting balance</th>
    <th>Modified date</th>
    <th>Deleted</th>
    <th>Color</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.description %></td>
    <td><%= account.type %></td>
    <td><%= account.starting_balance %></td>
    <td><%= account.modified_date %></td>
    <td><%= account.deleted %></td>
    <td><%= account.color %></td>
    <td><%= account.order_id %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

